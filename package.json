{
  "name": "api-content-flow",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/infra/main.ts",
    "test": "jest",
    "coverage": "jest --coverage",
    "setup-env": "ansible-playbook ./ansible/setup-env.yml",
    "setup-dev": "npm run setup-env && npm install && npm run up-dev-build",
    "up-dev": "docker compose -f docker-compose-dev.yaml up",
    "stop": "docker compose -f docker-compose-dev.yaml stop",
    "up-dev-build": "docker compose -f docker-compose-dev.yaml up --build",
    "update-swagger": "npx swagger-cli bundle swagger.yaml -o swagger-bundled.yaml --type yaml"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yaml,yml}": "prettier --write"
  },
